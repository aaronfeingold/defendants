<p id="notice"><%= notice %></p>

<h1>Defendants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>Race</th>
      <th>Date of birth</th>
      <th>Observation</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @defendants.each do |defendant| %>
      <tr>
        <td><%= defendant.name %></td>
        <td><%= defendant.sex %></td>
        <td><%= defendant.race %></td>
        <td><%= defendant.date_of_birth %></td>
        <td><%= defendant.observation_id %></td>
        <td><%= defendant.notes %></td>
        <td><%= link_to 'Show', defendant %></td>
        <td><%= link_to 'Edit', edit_defendant_path(defendant) %></td>
        <td><%= link_to 'Destroy', defendant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

